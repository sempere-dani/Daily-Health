<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.daniel.tabla.NewData"
    android:orientation="vertical"
    android:background="@drawable/fondo1">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Desayuno"
        android:id="@+id/textView3"
        android:layout_above="@+id/textView4"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="25dp"
        android:textSize="25dp" />

    <EditText
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:id="@+id/editTextDesayuno"
        android:inputType="number"
        android:text="0"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignEnd="@+id/btGuardar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Almuerzo"
        android:id="@+id/textView4"
        android:layout_above="@+id/editTextComida"
        android:layout_alignParentStart="true"
        android:textSize="25dp"/>

    <EditText
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:id="@+id/editTextAlmuerzo"
        android:inputType="number"
        android:text="0"
        android:layout_above="@+id/editTextComida"
        android:layout_alignStart="@+id/editTextDesayuno" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comida"
        android:id="@+id/textView5"
        android:textSize="25dp"
        android:layout_alignBottom="@+id/editTextComida"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Merienda"
        android:id="@+id/textView6"
        android:layout_marginTop="28dp"
        android:textSize="25dp"
        android:layout_below="@+id/textView5"
        android:layout_alignEnd="@+id/textView4" />

    <EditText
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:id="@+id/editTextMerienda"
        android:inputType="number"
        android:text="0"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignStart="@+id/editTextComida" />

    <EditText
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:id="@+id/editTextComida"
        android:inputType="number"
        android:text="0"
        android:layout_marginBottom="142dp"
        android:layout_above="@+id/btGuardar"
        android:layout_alignStart="@+id/editTextAlmuerzo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cena"
        android:id="@+id/textView8"
        android:textSize="25dp"
        android:layout_alignBottom="@+id/editTextCena"
        android:layout_alignStart="@+id/textView10" />

    <EditText
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:id="@+id/editTextCena"
        android:inputType="number"
        android:text="0"
        android:layout_below="@+id/editTextMerienda"
        android:layout_alignStart="@+id/editTextMerienda" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/Seleccion"
        android:textSize="25dp"
        android:id="@+id/textView10"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        />


    <Button

        android:id="@+id/btGuardar"
        android:text="Guardar"
        android:textColor="#FFFFFF"
        android:textSize="15dp"

        android:layout_width="100dp"
        android:layout_height="40dp"

        android:shadowColor="#483D8B"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:background="@drawable/save_button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextGone"
        android:layout_below="@+id/textView8"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:id="@+id/spinner"
        android:entries="@array/tipos"
        android:layout_above="@+id/editTextDesayuno"
        android:layout_centerHorizontal="true" />


</RelativeLayout>

