<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#A9A9A9"
    >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:gravity="center"
        >


    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/daily_health"/>

    <TableLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:background="#D3D3D3"
        >

        <TableRow
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="20px"
            android:paddingRight="20px"
            android:paddingBottom = "10px"
            >
            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingRight="20px"
                >
                <ImageButton
                    android:id="@+id/ibCalculo"
                    android:layout_width="200dp"
                    android:layout_height="160dp"
                    android:layout_weight="1"
                    android:background="#D3D3D3"
                    android:src="@drawable/c1"
                    />
                <TextView
                    android:layout_width="143dp"
                    android:layout_height="36dp"
                    android:gravity="center"
                    android:textSize="18dp"
                    android:textColor="#A52A2A"
                    android:text="CALCULO DIARIO"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingLeft="20px"
                android:background="#D3D3D3"
                >

                <ImageButton
                    android:id="@+id/ibEquivalencias"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:background="#D3D3D3"
                    android:src="@drawable/r1"

                    />

                <TextView
                    android:layout_width="143dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:textSize="18dp"
                    android:textColor="#A52A2A"
                    android:text="EQUIVALENCIAS"
                    android:textStyle="bold" />

            </LinearLayout>


        </TableRow>

        <TableRow
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="20px"
            android:paddingRight="20px"
            android:paddingTop = "20px"
            android:paddingBottom = "10px"
            >

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingRight="20px"
                >
                <ImageButton
                    android:id="@+id/ibRecetas"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:background="#D3D3D3"
                    android:padding="20px"
                    android:src="@drawable/re1"
                    />
                <TextView
                    android:layout_width="143dp"
                    android:layout_height="36dp"
                    android:gravity="center"
                    android:textSize="18dp"
                    android:textColor="#A52A2A"
                    android:text="RECETAS"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingLeft="20px"

                >

                <ImageButton
                    android:id="@+id/ibPiramide"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:background="#D3D3D3"
                    android:src="@drawable/p1"
                    />
                <TextView
                    android:layout_width="143dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:textSize="16dp"
                    android:textColor="#A52A2A"
                    android:text="PIRAMIDE NUTRICIONAL"
                    android:textStyle="bold" />
            </LinearLayout>

        </TableRow>

    </TableLayout>



</LinearLayout>