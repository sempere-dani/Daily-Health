<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.daniel.tabla.NewData"
    android:orientation="vertical"
    android:background="@drawable/fondo1">




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Desayuno"
        android:id="@+id/textView3"
        android:layout_marginTop="41dp"
        android:textSize="25dp"
        android:layout_below="@+id/tvTipo"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:id="@+id/editTextDesayuno"
        android:inputType="number"

        android:layout_alignTop="@+id/textView3"
        android:layout_toEndOf="@+id/tvTipo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Almuerzo"
        android:id="@+id/textView4"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true"
        android:layout_marginTop="29dp"
        android:textSize="25dp"/>

    <EditText
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:id="@+id/editTextAlmuerzo"
        android:inputType="number"

        android:layout_alignBottom="@+id/textView4"
        android:layout_alignStart="@+id/editTextDesayuno" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comida"
        android:id="@+id/textView5"
        android:textSize="25dp"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true"
        android:layout_marginTop="37dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Merienda"
        android:id="@+id/textView6"
        android:layout_marginTop="50dp"
        android:textSize="25dp"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:id="@+id/editTextMerienda"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignStart="@+id/editTextDesayuno"
        android:inputType="number"/>

    <EditText
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:id="@+id/editTextComida"
        android:inputType="number"
        android:layout_above="@+id/textView6"
        android:layout_alignStart="@+id/editTextAlmuerzo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cena"
        android:id="@+id/textView8"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/textView6"
        android:layout_alignParentStart="true"
        android:textSize="25dp"/>

    <EditText
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:id="@+id/editTextCena"
        android:layout_alignBottom="@+id/textView8"
        android:layout_alignStart="@+id/editTextMerienda"
        android:inputType="number"/>


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextGone"
        android:layout_below="@+id/textView8"
        android:layout_alignParentStart="true" />



    <Button
        android:id="@+id/btUpdate"
        android:text="Actualizar"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:background="@drawable/save_button"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_below="@+id/editTextCena"
        android:layout_alignStart="@+id/tvTipo" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:text="New Text"
        android:id="@+id/tvTipo"
        android:background="@drawable/back"
        android:gravity="center"
        android:layout_below="@+id/title_consumo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title_consumo"
        android:src="@drawable/cooltext_consumo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
