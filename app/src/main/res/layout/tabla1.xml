<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#D3D3D3"
    >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:gravity="center"
        >


    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/daily_health"/>

    <TableLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:background="#D3D3D3"
        >

        <TableRow
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="20px"
            android:paddingRight="20px"
            android:paddingBottom = "10px"
            >
            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingRight="20px"
                >
                <ImageButton
                    android:id="@+id/ibCalculo"
                    android:layout_width="200dp"
                    android:layout_height="160dp"
                    android:layout_weight="1"
                    android:background="#DCDCDC"
                    android:src="@drawable/addition_icon"
                    />

            </LinearLayout>

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingLeft="20px"
                android:background="#D3D3D3"
                >

                <ImageButton
                    android:id="@+id/ibEquivalencias"
                    android:layout_width="200dp"
                    android:layout_height="160dp"
                    android:layout_weight="1"
                    android:background="#DCDCDC"
                    android:src="@drawable/notes_icon"
                    />

            </LinearLayout>


        </TableRow>

        <TableRow
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="20px"
            android:paddingRight="20px"
            android:paddingTop = "20px"
            android:paddingBottom = "10px"
            >

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingRight="20px"
                >
                <ImageButton
                    android:id="@+id/ibRecetas"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:background="#DCDCDC"
                    android:padding="20px"
                    android:src="@drawable/recetas1"
                    />

            </LinearLayout>

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingLeft="20px"
                >

                <ImageButton
                    android:id="@+id/ibPiramide"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:background="#DCDCDC"
                    android:src="@drawable/triangle_icon"
                    />

            </LinearLayout>

        </TableRow>

    </TableLayout>



</LinearLayout>